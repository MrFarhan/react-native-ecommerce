{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ES2017"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "common/*": ["src/common/*"],
      "components/*": ["src/components/*"],
      "screens/*": ["src/screens/*"],
      "constants/*": ["src/constants/*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
